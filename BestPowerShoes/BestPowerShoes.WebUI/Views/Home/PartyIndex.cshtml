@{
    ViewBag.Title = "Party Page";
}
<style>
    .modal-dialog {
        width: 75%;
    }
</style>


<script src="~/Scripts/BPS_Scripts/Index.js"> </script>
<script src="~/Scripts/BPS_Scripts/Party.js"></script>


    <div class="container">      
            
                <div class="row" id="queryMsgForPartyIndex">

        </div>
    </div>

    
    <div class="row">
        <div class="form-group">
            <h3 style="float:left;">Parties</h3>
            <button id="addParty" class="btn btn-success" style="float:right;" onclick="$('#queryMsgForPartyIndex').slideUp(1000);" data-toggle="modal" data-target="#myModal">New(+)</button>
            <hr style="clear:both;" />
        </div>
    </div>
    <div class="row" style="margin-top:20px;">
        <table id="cusTbl" class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Mobile</th>
                    <th>Address</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog modal-md">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header" style="height:55px;">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <p><p class="modal-title bold" style="float:left; font-size:20px;">ADD NEW PARTY</p></p>
                    <div class="clearfloat"></div>
                </div>
                <div class="modal-body" id="model_body_rapper">
                    <div class="container">
                        <div class="row">
                            @using (Html.BeginForm("", "", FormMethod.Post, new { @Id = "partyForm", @class = "", role = "form" }))
                        {

                        <!--End for Input Control-->
                        <div class="form-group">
                            <div class="col-sm-6">
                                <div class="col-sm-3">
                                    <label for="name11">Name <span class="text-danger">*</span></label>
                                </div>
                                <div class="col-sm-9">
                                    <input type="text" id="name" class="form-control" placeholder="Name (Required)" required/>
                                </div>
                            </div>
                            <!--next form control-->
                            <div class="col-sm-6">
                                <div class="col-sm-4">
                                    <label for="day">Category <span class="text-danger">*</span></label>
                                </div>
                                <div class="col-sm-8">
                                    <select id="partyProcess" class="chosen-select">
                                        <option value="1">Stitching</option>
                                        <option value="2">Cutting</option>
                                        <option value="3">Printing & Embos</option>
                                        <option value="4">Sole Injection</option>
                                        <option value="5">Packing</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="clearfloat"></div><br /><br />

                        <div class="form-group">
                            <div class="col-sm-6">
                                <div class="col-sm-3">
                                    <label for="name11">Mobile <span class="text-danger">*</span></label>
                                </div>
                                <div class="col-sm-9">
                                    <input type="text" id="mobile" class="form-control" placeholder="Mobile (Required)">
                                </div>
                            </div>
                            <!--next form control-->

                            <div class="col-sm-6">
                                <div class="col-sm-3">
                                    <label for="name11">Address <span class="text-danger">*</span></label>
                                </div>
                                <div class="col-sm-9">
                                    <textarea class="form-control" style="width:80%;" id="address"></textarea>
                                </div>
                            </div>



                        </div>       <br /><br />
                        <div id="queryMsg">

                        </div>

                        <div class="clearfloat"></div><br /><br /><br />
                        <div class="form-group">
                            <div class="col-sm-6"></div>
                            <div class="col-sm-6">
                                <div class="col-sm-1"></div>
                                <div class="col-sm-11">
                                    <!--End for Input Control-->
                                    <input type="button" id="partySaveAddMoreId" class="btn btn-primary btn-lg" style="float:left; margin:0px 7px 0px 10px;" value="Save & Add More" />
                                    <input type="button" data-dismiss="modal" id ="partySaveCloseId" class="btn btn-default btn-lg" style="float:left;" value="Save & Close" />
                                </div>
                            </div>

                        </div>


                        <div class="clearfloat"></div>
                       }

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div> <!--end of model content-->
    <!--end popup-->
